<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.carl.testproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="SimpleCalc"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".selectionActivity"
            android:label="Select Your Calculation"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:label="Sizing to Add"
            android:parentActivityName=".selectionActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity
            android:name=".DIWActivity"
            android:label="DIW to Add"
            android:parentActivityName=".selectionActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".SCGActivity"
            android:label="SCG to Add"
            android:parentActivityName=".selectionActivity"
            android:windowSoftInputMode="stateVisible|adjustResize" />
    </application>

</manifest>